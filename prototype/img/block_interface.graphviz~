digraph g{
  rankdir=LR;
  splines=ortho;
  node[shape=rectangle,style=filled,height=1,width=1]
  A[color=lightgreen]
  B[color=lightgreen]

  Block[height=2,color=lightblue]
  External[color=pink]
  A -> Block [label="Watchdog Monitor"];
  External -> Block [dir=back,label="LED"];
  Block -> B [ label="Watchdog Uptime"];

}

